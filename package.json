{
  "name": "@etalab/adresse-explorer-api",
  "version": "0.0.0",
  "description": "Proxy to BAN API",
  "main": "index.js",
  "author": "Jérôme Desboeufs <jerome.desboeufs@data.gouv.fr>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "addok:prepare": "./bin/prepare-addok.sh",
    "mongo:indexes": "node bin/mongo-indexes.js",
    "mongo:clean": "node bin/mongo-clean.js",
    "prepare-data": "node bin/prepare-data.js",
    "build": "yarn addok:stop && yarn mongo:clean && yarn prepare-data && yarn mongo:indexes && yarn addok:prepare",
    "start": "node server",
    "addok:start": "docker-compose -f docker/addok.yml up -d",
    "addok:stop": "docker-compose -f docker/addok.yml down",
    "lint": "xo bin lib *.js"
  },
  "dependencies": {
    "@etalab/cog": "^0.1.0",
    "@turf/turf": "^5.1.6",
    "bluebird": "^3.5.3",
    "cors": "^2.8.5",
    "csv-parser": "^2.1.0",
    "debug": "^4.1.1",
    "decompress": "^4.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1",
    "geojson-stream": "^0.0.1",
    "get-stream": "^4.1.0",
    "gunzip-stream": "^1.0.1",
    "lodash": "^4.17.11",
    "mississippi": "^3.0.0",
    "mkdirp": "^0.5.1",
    "mongodb": "^3.1.10",
    "ndjson": "^1.5.0",
    "worker-farm": "^1.6.0"
  },
  "devDependencies": {
    "xo": "^0.23.0"
  },
  "xo": {
    "semicolon": false,
    "space": 2
  },
  "engines": {
    "node": ">= 8"
  }
}
